{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Service",
            "runtimeVersion": "16.20.2",
            "preLaunchTask": "npm: build", // npm run build
            "runtimeArgs": ["start"], // npm run start
            "request": "launch",
            "runtimeExecutable": "npm",
            "type": "node",
            "skipFiles": ["<node_internals>/**"],
        },
        {
            "name": "Watch",
            "runtimeVersion": "16.20.2",
            "runtimeArgs": ["dev"], // npm run dev
            "request": "launch",
            "runtimeExecutable": "npm",
            "type": "node",
            "skipFiles": ["<node_internals>/**"],
        }
    ]
}